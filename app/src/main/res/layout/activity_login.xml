<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_window"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.ofcoder.lazy.window.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.yinfork.linedlayout.LinedRelativeLayout
            android:id="@+id/layout_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/et_connect_host"
                style="@style/EditText.EnterConnectInfo"
                android:hint="@string/connect_host"
                android:text="192.168.0.109" />

            <EditText
                android:id="@+id/et_connect_port"
                style="@style/EditText.EnterConnectInfo"
                android:layout_below="@id/et_connect_host"
                android:layout_marginTop="20dp"
                android:inputType="phone|number"
                android:maxLength="6"
                android:text="8888"
                android:hint="@string/connect_port"/>

        </com.yinfork.linedlayout.LinedRelativeLayout>

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_selector"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="连接"/>

    </LinearLayout>



</LinearLayout>
